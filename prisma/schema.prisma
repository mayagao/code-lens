generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  githubId     String       @unique
  name         String
  email        String?
  avatarUrl    String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  repositories Repository[]
}

model Repository {
  id             String              @id @default(cuid())
  name           String
  owner          String
  description    String?
  githubId       String              @unique
  userId         String
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  commitAnalyses CommitAnalysis[]
  user           User                @relation(fields: [userId], references: [id])
  analysis       RepositoryAnalysis?

  @@unique([owner, name])
}

model RepositoryAnalysis {
  id                 String     @id @default(cuid())
  repositoryId       String     @unique
  mermaidDiagram     String
  lastAnalyzedCommit String
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  overview           String
  concepts           Concept[]
  repository         Repository @relation(fields: [repositoryId], references: [id])
}

model Concept {
  id          String             @id @default(cuid())
  name        String
  description String
  category    String
  confidence  Float
  analysisId  String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  analysis    RepositoryAnalysis @relation(fields: [analysisId], references: [id])

  @@unique([name, analysisId])
}

model CommitAnalysis {
  id                  String     @id @default(cuid())
  repositoryId        String
  commitSha           String
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  codeChanges         Json
  architectureDiagram Json
  reactConcept        Json
  repository          Repository @relation(fields: [repositoryId], references: [id])

  @@unique([repositoryId, commitSha])
}
